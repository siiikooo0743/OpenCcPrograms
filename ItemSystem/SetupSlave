print("Modes:")
print("")
print(" 0: nothing")
print(" 1: craft")
print("")
print("Wich one?")
m = read()

if(m == "0") then
  fs.delete("setup")
elseif(m == "1") then 
  fs.makeDir("ItemSystem")
  fs.makeDir("ItemSystem/BareBoneSlave")
  f = fs.open("ItemSystem/BareBoneSlave/mode", "w")
  f.write("mode_craft")
  f.close()
  f = fs.open("ItemSystem/BareBoneSlave/status", "w")
  f.write("ready")
  f.close()
  shell.run("GitHub rep siiikooo0743/OpenCcPrograms")
  shell.run("GitHub clone ItemSystem/SlaveApi slaveApi")
  shell.run("GitHub clone ItemSystem/BareBoneSlave BareBoneSlave")
  shell.run("GitHub clone ItemSystem/Listen Listen")
  shell.run("GitHub clone ItemSystem/mode_craft mode_craft")
  fs.delete("setup")
else
 print("Invalid!")
end




