--GitHub siiikooo0743/OPenCcPrograms/master/Tank tank
rs.setOutput("right", false)
local tank = peripheral.wrap("top")

while true do
  sleep(0.2)
  local tableInfo = tank.getTanks("unknown")
  local amount
  for key, value in pairs(tableInfo) do
    if(value.amount == nil) then
      amount = 0
    else
      amount = value.amount
    end
  end
  
  print(amount)
  if(amount > 4000) then
    rs.setOutput("right", true)
  else
    rs.setOutput("right", false)
  end
  
end
