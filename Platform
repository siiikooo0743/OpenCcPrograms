function move()
   turtle.select(16)
   turtle.refuel(1)
   while (not(turtle.forward())) do
    turtle.refuel(1)
   end
end

function turn(side)
  if(side == 0) then
    turtle.turnLeft()
    move()
    turtle.turnLeft()
    move()
  end
  
  if(side == 1) then
    turtle.turnRight()
    move()
    turtle.turnRight()
    move()
  end
end

function place()
  turtle.select(1)
  for i = 1, 15 do
    if (not(turtle.getItemCount(i) == 0)) then
      turtle.select(i)
      break
    end
  end
  turtle.placeDown()
end



local arg = { ... }

turtle.select(1)
side = 1

for i = 1, arg[2] do
  for j = 1, arg[1] do
    place()
    move()
  end
  
  turn(side)
  if(side == 0) then
    side = 1
  else
    side = 0
  end
end  
