	Whith this program a turtle builds a platform with the materail in his inventory.
	The first two arguments specifie the size of the platform.
]]

function move()
   if(turtle.getFuelLevel()<100) 
   then
    turtle.select(16)
    turtle.refuel(1)
   end
   while (not(turtle.forward())) do
    if(turtle.getFuelLevel()<100) 
    then
     print("No Fuel!!!")
     turtle.select(16)
     turtle.refuel(1)
     sleep(5)
    else
     print("Can't move !!")
     sleep(5)
    end
   end
end

function turn(side)
  if(side == 0) then
    turtle.turnLeft()
    move()
    turtle.turnLeft()
  end
  
  if(side == 1) then
    turtle.turnRight()
    move()
    turtle.turnRight()
  end
end

function placeTorch()
 turtle.turnRight()
 turtle.select(13)
 turtle.place()
 turtle.turnLeft()
end

function place()
  turtle.select(1)
  for i = 1, 12 do
    if (not(turtle.getItemCount(i) == 0)) then
      turtle.select(i)
      break
    end
  end
  turtle.placeDown()
end


local arg = { ... }

if(#arg ~= 2) 
then 
 print("Please give exactly two parameters. Legth and width.")
 return
end

turtle.select(1)
side = 1

width = tonumber(arg[2])
length = tonumber(arg[1])

for x = 1, width do
  for y = 1, length do
    place()
    
    if(math.fmod(x,6)==2 and math.fmod(y,6)==2)
    then
     placeTorch()
    end
    
    if(y == length) 
    then 
     break
    end
    move()
  end
  
  if(x == width) 
  then 
   break
  end
  turn(side)
  
  if(side == 0) then
    side = 1
  else
    side = 0
  end
end  
