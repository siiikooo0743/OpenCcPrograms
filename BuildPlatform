	Whith this program a turtle builds a platform with the materail in his inventory.
	The first two arguments specifie the size of the platform.
]]

function move()
   if(turtle.getFuelLevel()<100) 
   then
    turtle.select(16)
    turtle.refuel(1)
   end
   while (not(turtle.forward())) do
    turtle.select(16)
    turtle.refuel(1)
   end
end

function turn(side)
  if(side == 0) then
    turtle.turnLeft()
    move()
    turtle.turnLeft()
  end
  
  if(side == 1) then
    turtle.turnRight()
    move()
    turtle.turnRight()
  end
end

function placeTorch()
 turtle.turnLeft()
 turtle.select(12)
 turtle.place()
 turtle.turnRight()
end

function place()
  turtle.select(1)
  for i = 1, 11 do
    if (not(turtle.getItemCount(i) == 0)) then
      turtle.select(i)
      break
    end
  end
  turtle.placeDown()
end



local arg = { ... }

turtle.select(1)
side = 1

for i = 1, arg[2] do
  for j = 1, (arg[1]) do
    place()
    
    if((i%5)==2 && (j%5)==2)
    then
     placeTorch()
    end
    
    if( j!=arg[1]) 
    then 
     move()
    end
  end
  
  if(i == arg[2]) 
  then 
   break
  end
  turn(side)
  
  if(side == 0) then
    side = 1
  else
    side = 0
  end
end  
